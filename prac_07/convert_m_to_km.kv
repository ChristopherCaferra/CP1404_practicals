BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0.0'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                halign: 'center'
                on_press: app.handle_increment(float(input_number.text), 1)
            Button:
                text: 'Down'
                halign: 'center'
                on_press: app.handle_increment(float(input_number.text), -1)

    Button:
        text: 'Convert Miles to Kilometres'
        halign: 'center'
        on_press: app.handle_conversion_calculation(float(input_number.text))
    Label:
        id: output_label
        font_size: (36)
        color: (1, 1, 0, 1)
