BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 36
            on_text: app.handle_calculate_conversion()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                halign: 'center'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                halign: 'center'
                on_press: app.handle_increment(-1)
